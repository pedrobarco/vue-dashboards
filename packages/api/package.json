{
  "name": "api",
  "version": "0.1.0",
  "main": "dist/index.js",
  "private": true,
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "yarn clean && yarn build:src && yarn build:docs",
    "build:src": "yarn tsc",
    "build:src:types": "yarn tsc --noEmit",
    "build:docs": "yarn build:docs:typedoc",
    "build:docs:typedoc": "yarn typedoc",
    "build:docs:redoc": "yarn redoc-cli bundle ./openapi.yaml --output ./docs/redoc.html",
    "dev": "yarn nodemon",
    "dev:docs": "yarn redoc-cli serve --watch ./openapi.yaml",
    "lint": "yarn eslint . --fix --ext .js,.jsx,.ts,.tsx",
    "lint:prettier": "yarn prettier --write '**/*.{json,md,scss,yaml,yml}'",
    "lint:file": "yarn eslint --fix --max-warnings=0",
    "test": "yarn jest",
    "test:watch": "yarn jest --coverage --watch",
    "clean": "yarn clean:src && yarn clean:docs",
    "clean:src": "yarn rimraf dist/",
    "clean:docs": "yarn rimraf docs/",
    "precommit": "yarn build:src:types && yarn test && yarn lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint:file",
      "git add"
    ],
    "*.{json,md,scss,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/errorhandler": "^0.0.32",
    "@types/helmet": "^0.0.45",
    "@types/jest": "^24.0.25",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.6",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.2.0",
    "eslint-plugin-jest-formatting": "^1.2.0",
    "eslint-plugin-jsdoc": "^18.6.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "redoc-cli": "^0.9.5",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typedoc": "^0.15.6",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "@google-cloud/firestore": "^3.3.2",
    "axios": "^0.19.2",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  }
}
